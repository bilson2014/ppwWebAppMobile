.commonInputDiv {
    width: 100%;
    height: 60px;
    display: block;
    position: absolute;
    background: none;
    outline: none;
    border-radius: 5px;
    padding-left: 28px;
    @media screen and (max-width: 360px) {
        height: 40px;
    }
    @media screen and (min-width: 360px) and (max-width: 420px) {
        height: 45px;
    }
}

.commonSubmit {
    letter-spacing: 5px;
    background: none;
    height: 60px;
    width: 80%;
    text-align: center;
    line-height: 60px;
    font-size: $font-size;
    cursor: pointer;
    margin: 0 auto;
    border-radius: 120px;
    @media screen and (max-width: 360px) {
        height: 40px;
        line-height: 40px;
    }
    @media screen and (min-width: 360px) and (max-width: 420px) {
        height: 45px;
        line-height: 45px;
    }
}

.commonNoSubmit {
    height: 60px;
    width: 80%;
    text-align: center;
    line-height: 60px;
    font-size: $font-size;
    background: $gray;
    cursor: not-allowed;
    margin: 0 auto;
    border-radius: 120px;
    @media screen and (max-width: 360px) {
        height: 40px;
        line-height: 40px;
    }
    @media screen and (min-width: 360px) and (max-width: 420px) {
        height: 45px;
        line-height: 45px;
    }
}

.checkInfo {
    position: relative;
    top: -25px;
}

